<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="application.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #1a237e, #0d47a1);">

    <AnchorPane maxWidth="400" maxHeight="500">
        <VBox alignment="CENTER" 
              spacing="20" 
              style="-fx-background-color: white; -fx-background-radius: 10;"
              AnchorPane.leftAnchor="20" 
              AnchorPane.rightAnchor="20"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20">
            
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>

            <!-- Logo or Title -->
            <Label text="âš½" style="-fx-font-size: 48px;"/>
            
            <Label text="Team Login" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>

            <!-- Email Field -->
            <VBox spacing="5">
                <Label text="Email" 
                       style="-fx-text-fill: #757575; -fx-font-size: 12px;"/>
                <TextField fx:id="emailField" 
                          promptText="Enter team email"
                          style="-fx-pref-height: 35; 
                                 -fx-background-radius: 5;
                                 -fx-border-color: #e0e0e0;
                                 -fx-border-radius: 5;
                                 -fx-font-size: 14px;
                                 -fx-padding: 5 10 5 10;"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password" 
                       style="-fx-text-fill: #757575; -fx-font-size: 12px;"/>
                <TextField fx:id="passwordField" 
                          promptText="Enter password"
                          style="-fx-pref-height: 35;
                                 -fx-background-radius: 5;
                                 -fx-border-color: #e0e0e0;
                                 -fx-border-radius: 5;
                                 -fx-font-size: 14px;
                                 -fx-padding: 5 10 5 10;"/>
            </VBox>

            <!-- Error Message -->
            <Label fx:id="errorLabel" 
                   style="-fx-text-fill: #f44336; 
                          -fx-font-size: 12px;"
                   wrapText="true"
                   alignment="CENTER"/>

            <!-- Login Button -->
            <Button text="LOGIN" 
                    onAction="#handleLogin"
                    style="-fx-background-color: #1a237e;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-pref-width: 200;
                           -fx-pref-height: 40;
                           -fx-background-radius: 20;
                           -fx-cursor: hand;"
                    maxWidth="Infinity">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Button>

            <!-- Footer -->
            <Label text="UCL Team Match Maker" 
                   style="-fx-text-fill: #9e9e9e; -fx-font-size: 12px;">
                <VBox.margin>
                    <Insets top="20"/>
                </VBox.margin>
            </Label>
        </VBox>
    </AnchorPane>
</StackPane>
